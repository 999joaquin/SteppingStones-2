{
  "compilerOptions": {
    /* ---- Core settings ---- */
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "jsx": "preserve",

    /* ---- Type-checking ---- */
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,

    /* ---- Module / bundler ---- */
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* ---- Next.js plugin ---- */
    "plugins": [{ "name": "next" }],

    /* ---- Path alias (added) ---- */
    "baseUrl": ".",                 // <- **required for "paths" to work**
    "paths": {
      "@/*": ["./*"]                // "@/lib/utils" â†’ "./lib/utils"
    }
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
